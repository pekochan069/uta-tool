---
import Sidebar from "./Sidebar";
import ThemeToggle from "./ThemeToggle";
import CurrentPath from "./CurrentPath";

export interface props {
  useSidebar?: boolean;
}

const { useSidebar = false } = Astro.props;
---

<div
  class="sticky inset-0 z-40 w-full border-b border-stone-900/20 backdrop-blur supports-[backdrop-blur]:bg-white/95"
>
  <div
    class="container mx-auto flex max-w-[96rem] justify-between p-2 md:px-4 md:py-3"
  >
    <nav class="w-fit">
      <a href="/">
        <h1
          class="inline-block font-alfa text-3xl tracking-wide dark:text-stone-300"
        >
          uta-tool
        </h1>
      </a>
    </nav>
    <div>
      <ThemeToggle client:only />
    </div>
  </div>
  {useSidebar && <Sidebar client:only />}
</div>
