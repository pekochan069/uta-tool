---
import Layout from "~/layouts/Layout.astro";
import Card from "~/components/Card.astro";
import "./index.css";

import * as Icons from "~/components/icons";
---

<Layout title="uta-tool">
  <ul class="grid gap-4 md:gap-8">
    <div>
      <h2
        class="mb-2 text-3xl font-bold tracking-wide text-stone-900 dark:text-stone-200 md:mb-3 md:text-4xl lg:mb-4 lg:text-5xl"
      >
        Converters
      </h2>
      <ul
        class="card-list grid place-items-center gap-2 md:gap-4 xl:grid-cols-5 2xl:grid-cols-6"
      >
        <Card name="base64" type="converter">
          <Icons.Base64Icon />
        </Card>
        <Card name="hex" type="converter">
          <Icons.HexIcon />
        </Card>
        <Card name="octal" type="converter">
          <Icons.OctalIcon />
        </Card>
        <Card name="binary" type="converter">
          <Icons.BinaryIcon />
        </Card>
      </ul>
    </div>
  </ul>
</Layout>
